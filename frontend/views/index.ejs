<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Authentication</title>
</head>
<body>
    <h1>User Sign-Up</h1>
    <form class="sign-up-form">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required><br><br>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>
        
        <button type="submit" id="signUpButton">Sign Up</button>
    </form>

    <h1>Employer Sign-Up</h1>
    <form class="employer-sign-up-form">
        <label for="employerUsername">Username:</label>
        <input type="text" id="employerUsername" name="username" required><br><br>
        
        <label for="employerEmail">Email:</label>
        <input type="email" id="employerEmail" name="email" required><br><br>
        
        <label for="employerPassword">Password:</label>
        <input type="password" id="employerPassword" name="password" required><br><br>
        
        <button type="submit" id="employerSignUpButton">Sign Up</button>
    </form>

    <h1>User Login</h1>
    <form class="login-form">
        <label for="loginEmail">Email:</label>
        <input type="email" id="loginEmail" name="email" required><br><br>
        
        <label for="loginPassword">Password:</label>
        <input type="password" id="loginPassword" name="password" required><br><br>
        
        <button type="submit" id="loginButton">Login</button>
    </form>

    <h1>Employer Login</h1>
    <form class="employer-login-form">
        <label for="employerLoginEmail">Email:</label>
        <input type="email" id="employerLoginEmail" name="email" required><br><br>
        
        <label for="employerLoginPassword">Password:</label>
        <input type="password" id="employerLoginPassword" name="password" required><br><br>
        
        <button type="submit" id="employerLoginButton">Login</button>
    </form>

    <!-- Include your JavaScript files -->
    <script src="signup.bundle.js"></script>
    <script src="login.bundle.js"></script>
    <script src="employersignup.bundle.js"></script>
    <script src="employerlogin.bundle.js"></script>
</body>
</html>



